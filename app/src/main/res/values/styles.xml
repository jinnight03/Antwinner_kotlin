<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 차트 X축 텍스트 스타일 -->
    <style name="ChartXAxisTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- 기간 선택 칩 스타일 (수정) -->
    <style name="PeriodChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/period_chip_state_list</item>
        <item name="android:textColor">@color/period_chip_text_state_list</item>
        <item name="chipCornerRadius">50dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>
    
    <!-- 원형 이미지를 위한 스타일 -->
    <style name="ShapeAppearanceOverlay.App.CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- 원형 이미지뷰 스타일 (누락된 스타일 추가) -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- 라운드 코너 이미지뷰 스타일 -->
    <style name="RoundedCornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- 테마 아이콘용 둥근 모서리 이미지 스타일 -->
    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- 테마 상세 페이지 스타일 -->
    <style name="ThemeDetailRoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ThemeDetailChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/theme_detail_chip_background</item>
        <item name="android:textColor">@color/theme_detail_chip_text</item>
        <item name="chipMinHeight">@dimen/theme_detail_feature_chip_height</item>
        <item name="chipMinTouchTargetSize">@dimen/theme_detail_feature_chip_height</item>
        <item name="chipStartPadding">@dimen/theme_detail_feature_chip_padding</item>
        <item name="chipEndPadding">@dimen/theme_detail_feature_chip_padding</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ThemeDetailCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/theme_detail_card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/theme_detail_card_background</item>
        <item name="strokeColor">@color/theme_detail_card_stroke</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:layout_margin">@dimen/theme_detail_card_margin</item>
        <item name="contentPadding">@dimen/theme_detail_card_padding</item>
    </style>
    
    <style name="ThemeDetailButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/theme_detail_button_text</item>
        <item name="backgroundTint">@color/theme_detail_button_background</item>
        <item name="android:minHeight">@dimen/theme_detail_button_height</item>
        <item name="android:layout_margin">@dimen/theme_detail_button_margin</item>
        <item name="cornerRadius">@dimen/theme_detail_card_corner_radius</item>
    </style>

    <!-- 테마 일정 탭 텍스트 스타일 -->
    <style name="ThemeScheduleTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- 테마 일정 탭 텍스트 스타일 (누락된 스타일 추가) -->
    <style name="ThemeScheduleTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- 기본 정보 섹션에서 사용할 BasicInfoLabel과 BasicInfoValue 스타일 -->
    <style name="BasicInfoLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">start</item> 
    </style>

    <style name="BasicInfoValue">
        <item name="android:layout_width">0dp</item> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">fill_horizontal</item> 
        <item name="android:gravity">end</item> 
    </style>

    <!-- 테마 검색 결과 엘리먼트 스타일 -->
    <style name="ThemeItemCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">@dimen/theme_detail_card_corner_radius</item>
    </style>

    <!-- 메인 탭 텍스트 스타일 -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 뉴스 카드 관련 스타일 -->
    <style name="RoundedCornerSmallImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- 뉴스 종목 태그 스타일 -->
    <style name="NewsStockTag" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">#F5F5F5</item>
        <item name="android:textColor">#666666</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources> 