<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:background="@color/white"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp">

    <!-- 날짜 박스 (크기 축소) -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025년\n4월 10일"
        android:textColor="#666666"
        android:textSize="10sp"
        android:lineSpacingExtra="1dp"
        android:gravity="center"
        android:background="@drawable/bg_date_box"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상승률 (크기 축소) -->
    <TextView
        android:id="@+id/tv_rise_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12%"
        android:textColor="#FF4444"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_rise_rate"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상승 이유 제목 (마진 축소로 더 넓게) -->
    <TextView
        android:id="@+id/tv_rise_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:text="트럼프, 중국 제의 국가별 상호관세 90일간 전격 유예"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toStartOf="@id/tv_rise_rate"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 거래 정보 (텍스트 크기 축소) -->
    <TextView
        android:id="@+id/tv_trade_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="거래량 170만 · 거래대금 43억"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_rise_reason" />

    <!-- 연관 테마 (텍스트 크기 축소) -->
    <LinearLayout
        android:id="@+id/layout_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_trade_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연관 테마"
            android:textColor="#888888"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="반도체(인공지능)"
            android:textColor="#333333"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 