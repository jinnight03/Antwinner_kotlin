<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 첫 번째 아이템 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <!-- 순위 -->
        <View
            android:id="@+id/view_rank"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 로고 -->
        <View
            android:id="@+id/view_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toEndOf="@id/view_rank"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 종목명 -->
        <View
            android:id="@+id/view_name"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toEndOf="@id/view_logo"
            app:layout_constraintTop_toTopOf="@id/view_logo" />

        <!-- 상승률 -->
        <View
            android:id="@+id/view_percent"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_logo" />

        <!-- 말풍선 배경 -->
        <View
            android:id="@+id/view_bubble"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="52dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_name" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/view_bubble" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <!-- 두 번째 아이템 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <!-- 순위 -->
        <View
            android:id="@+id/view_rank2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 로고 -->
        <View
            android:id="@+id/view_logo2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toEndOf="@id/view_rank2"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 종목명 -->
        <View
            android:id="@+id/view_name2"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toEndOf="@id/view_logo2"
            app:layout_constraintTop_toTopOf="@id/view_logo2" />

        <!-- 상승률 -->
        <View
            android:id="@+id/view_percent2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_logo2" />

        <!-- 말풍선 배경 -->
        <View
            android:id="@+id/view_bubble2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="52dp"
            android:background="@drawable/skeleton_animation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_name2" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/view_bubble2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout> 