<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_bubble_background"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/theme_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_theme_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_theme_default"
                android:scaleType="centerCrop"
                android:contentDescription="테마 아이콘"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_theme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인공지능(AI)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_theme_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+56.55%"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/rising_color" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_theme_company1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="포바이포"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_theme_company1_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+30.00%"
                android:textStyle="bold"
                android:textColor="@color/rising_color"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_theme_company1_market_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="거래대금: 25억"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_theme_company2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DSC인베스트먼트"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_theme_company2_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+29.98%"
                android:textStyle="bold"
                android:textColor="@color/rising_color"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_theme_company2_market_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="거래대금: 291억"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_theme_company3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TS인베스트먼트"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_theme_company3_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+29.97%"
                android:textStyle="bold"
                android:textColor="@color/rising_color"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_theme_company3_market_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="거래대금: 388억"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>
</androidx.cardview.widget.CardView> 