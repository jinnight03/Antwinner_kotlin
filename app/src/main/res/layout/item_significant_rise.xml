<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/layout_chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_stock_change"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            app:chipBackgroundColor="@color/chip_background"
            android:textColor="@color/rising_color" 
            android:textStyle="bold"
            android:textSize="13sp"
            app:chipMinHeight="32dp"
            android:paddingHorizontal="8dp"
            tools:text="+17.24%" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_theme"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            app:chipIcon="@drawable/ic_korea_flag" 
            app:chipIconSize="16dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/chip_background"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:chipMinHeight="32dp"
            android:paddingHorizontal="8dp"
            tools:text="해저터널" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="이재명 '해저 송전망' 언급, '한반도 전역에 해상망 구축' 발언 지속 부각"
        app:layout_constraintTop_toBottomOf="@+id/layout_chips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        tools:text="2025-04-25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_news_title" />

    <TextView
        android:id="@+id/tv_trading_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        tools:text="거래대금 : 3018억 · 거래량 : 5315만"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_date"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 