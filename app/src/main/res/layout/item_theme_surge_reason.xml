<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- 관련 종목 배지 (CardView + TextView) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_related_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#FFF1F3" 
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:contentPadding="0dp">

            <TextView
                android:id="@+id/tv_related_stock_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#E51937" 
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="마이크로컨텍솔 +14.61%" />
        </androidx.cardview.widget.CardView>

        <!-- 테마명 배지 (CardView + ImageView + TextView) -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="12dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iv_theme_badge_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_launcher_foreground" 
                    android:contentDescription="테마 아이콘"/>

                <TextView
                    android:id="@+id/tv_theme_badge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:text="반도체(인공지능)" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reason_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"
        tools:text="AI 반도체 생태계 구축에 1조 투입 소식 부각으로 반도체 관련주 전체 상승 지속" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reason_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            tools:text="2024. 12. 20" />

        <TextView
            android:id="@+id/tv_reason_trading_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            tools:text="거래량 170만 · 거래대금 43억" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F0F0F0" /> 

</LinearLayout> 