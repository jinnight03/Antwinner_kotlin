<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_investor_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_investor_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/investor_image"
            tools:src="@drawable/sample_investor" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_investor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_investor_ranking"
        app:layout_constraintEnd_toStartOf="@+id/tv_investor_score"
        app:layout_constraintStart_toEndOf="@+id/cv_investor_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="반도체" />

    <TextView
        android:id="@+id/tv_investor_ranking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_investor_score"
        app:layout_constraintStart_toEndOf="@+id/cv_investor_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_investor_name"
        tools:text="1일전 데이터(D+1)" />

    <TextView
        android:id="@+id/tv_investor_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/market_up"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+17종목" />

</androidx.constraintlayout.widget.ConstraintLayout> 