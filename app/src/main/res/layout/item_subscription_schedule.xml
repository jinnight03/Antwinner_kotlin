<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- 날짜 -->
    <TextView
        android:id="@+id/tv_subscription_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2024. 6. 18 ~ 6. 19" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_subscription_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/iv_red_dot"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subscription_date"
        tools:text="에이치이엠파마(구.에이치이엠)" />

    <!-- 빨간 점 -->
    <ImageView
        android:id="@+id/iv_red_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/red_dot"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_subscription_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_subscription_title"
        app:layout_constraintTop_toTopOf="@+id/tv_subscription_title"
        tools:visibility="visible" />

    <!-- 공모가 -->
    <TextView
        android:id="@+id/tv_subscription_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="공모가"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subscription_title" />

    <TextView
        android:id="@+id/tv_subscription_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_subscription_price_label"
        app:layout_constraintStart_toEndOf="@id/tv_subscription_price_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="-" />

    <!-- 희망가 -->
    <TextView
        android:id="@+id/tv_expected_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="희망가"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subscription_price_label" />

    <TextView
        android:id="@+id/tv_expected_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_expected_price_label"
        app:layout_constraintStart_toEndOf="@id/tv_expected_price_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="희망가 4,500~5,500" />

    <!-- 경쟁률 -->
    <TextView
        android:id="@+id/tv_competition_rate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="경쟁률"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_expected_price_label" />

    <TextView
        android:id="@+id/tv_competition_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_competition_rate_label"
        app:layout_constraintStart_toEndOf="@id/tv_competition_rate_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="-" />

    <!-- 주간사 -->
    <TextView
        android:id="@+id/tv_underwriter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="주간사"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_competition_rate_label" />

    <TextView
        android:id="@+id/tv_underwriter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_underwriter_label"
        app:layout_constraintStart_toEndOf="@id/tv_underwriter_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="한국투자증권" />

</androidx.constraintlayout.widget.ConstraintLayout> 